<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/*.do" decorator="/WEB-INF/jsp/decorators/decorator.jsp" />
    <mapping path="/*.jsp" decorator="/WEB-INF/jsp/decorators/decorator.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login.jsp*" exclue="true" />
    <mapping path="/login.do*" exclue="true" />
    
</sitemesh>